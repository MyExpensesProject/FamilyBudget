@model ExpenseTypeDto

<div id="sidebarUpdateExpenseType" class="flex flex-col fixed left-0 top-0 z-50 h-full w-80 -translate-x-full transform bg-white shadow-lg transition duration-300">
    <div class="flex flex-row items-center space-x-3 p-4">
        <h2 class="w-full text-sm font-bold uppercase">Create trip</h2>
        <button id="closeSidebarUpdateExpenseType">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"/>
            </svg>
        </button>
    </div>
    <hr/>
    <form asp-action="UpdateExpenseType" asp-controller="ExpenseTypes">
        <div class="flex flex-col h-full p-4 space-y-4">
            <div class="space-y-1">
                <p class="text-sm uppercase text-slate-400">From</p>
                <input type="text" asp-for="Name" class="w-full text-sm rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:outline-none" placeholder="Enter text"/>
            </div>
        </div>
        <hr/>
        <div class="flex flex-row space-x-4 p-4">
            <button class="w-full rounded-md border border-dashed border-blue-500 p-2 uppercase text-blue-500 hover:border-solid">Cancel</button>
            <button class="w-full rounded-md bg-blue-500 p-2 uppercase text-white hover:bg-blue-600">Close</button>
        </div>
    </form>
</div>