@using Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FamilyBudget</title>
    <link rel="stylesheet" href="~/css/tailwindStyles.css" />
    <script src="~/lib/axios/axios.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/FamilyBudget.styles.css" asp-append-version="true"/>
</head>
<body>

    <main role="main" class="flex h-screen w-full space-x-6 bg-slate-50 pr-6 flex-col md:flex-row pt-4 md:pt-0">
        @await Html.PartialAsync("_Navbar")
        <div id="overlay" class="fixed inset-0 bg-black bg-opacity-50 hidden z-10"></div>
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
          $("#navbar-toggle").click(function () {
            $("#navbar-menu").toggleClass("hidden");
          });
        });
    </script>

</body>
</html>