@using FamilyBudget.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers

<div class="md:hidden flex w-full justify-center">
    <button id="navbar-toggle" class="text-gray focus:outline-none">
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>
</div>

<nav id="navbar-menu" class="hidden md:flex flex-col h-auto md:h-full items-center space-y-3 bg-white p-3 sm:hidden md:w-4/12 xl:w-2/12">
    <a asp-area="" asp-controller="Home" asp-action="Index" class="p-3">
        <img class="w-40" src="~/img/logo.svg" alt=""/>
    </a>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="@Context.IsActive("/", "navBtnActive", "navBtnDefault")">
        🏠 Home
    </a>
    <a asp-area="Budget" asp-controller="Family" asp-action="Index" class="@Context.IsActive("/Budget/Family", "navBtnActive", "navBtnDefault")">
        👪 Family
    </a>
    <a asp-area="Expense" asp-controller="Expense" asp-action="Index" class="@Context.IsActive("/Expense/Expense", "navBtnActive", "navBtnDefault")">
        💸Expense
    </a>
    <a asp-area="Analyze" asp-controller="Analyze" asp-action="Index" class="@Context.IsActive("/Analyze/Analyze", "navBtnActive", "navBtnDefault")">
        💹 Analyze
    </a>
    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="@Context.IsActive("/Home/Privacy", "navBtnActive", "navBtnDefault")">
        🔥 Privacy
    </a>
    <hr class="w-full border border-slate-50"/>
    @await Html.PartialAsync("_LoginPartial")
</nav>

@section Scripts
{
    <script>
        $(document).ready(function () {
          $("#navbar-toggle").click(function () {
            $("#navbar-menu").toggleClass("hidden");
          });
        });
    </script>
}
