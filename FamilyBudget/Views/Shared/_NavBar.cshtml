@using FamilyBudget.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers

<header class="flex h-full flex-col items-center space-y-3 bg-white p-3 sm:hidden md:flex md:w-4/12 xl:w-2/12">
